{
  "version": 2,
  "name": "efootball-league-frontend",
  "public": "public",
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "admin.html", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "BACKEND_URL": "https://your-app-name.onrender.com"
  }
}
